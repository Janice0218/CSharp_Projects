@model LogIn


    
    <form class="p-1 card w-25" asp-controller="Home" asp-action="LogIn" method="post">
        <h3 class="card-header">Log In</h3>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="card-body">
 

     
        <div class="form-group row">
            <label class="col-md-4 col-form-label" asp-for="Email">Email: </label>
            <input class="form-control col-md-8" asp-for="Email" />

            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label class="col-md-4 col-form-label" asp-for="Password">Password: </label>
            <input class="form-control col-md-8" asp-for="Password" />

            <span class="text-danger" asp-validation-for="Password"></span>
        </div>

        <div class="form-group row text-center">

            <input class="form-control col-md-12 btn btn-primary" type="submit" value="Register" />
        </div>
        </div>
    </form>


<div class=" m-3">
    <form asp-action="Register" method="get">
        <p>New to this site? <input type="submit" value="Sign Up" /></p>
    </form>
</div>
