@using LoginAndRegistration.Models

<div class="container">

    <form style="width: 450px; padding: 25px; margin: 200px auto; border: 2px solid black"action="/" method="post">
        <h3>Sign up!</h3>
        <div class="form-group row">

            <label class="col-md-6 col-form-label" for="first_name">First Name: </label>
            <input class="form-control col-md-6" id="first_name" type="text" name="first_name"/>
            <span asp-validation-for="first_name"></span>
        </div>
        <div class="form-group row">

            <label class="col-md-6 col-form-label" for="last_name">Last Name: </label>
            <input class="form-control col-md-6" id="last_name" type="text" name="last_name" />
            <span asp-validation-for="last_name"></span>
        </div>
        <div class="form-group row">
            <label class="col-md-6 col-form-label" for="email">Email: </label>
            <input class="form-control col-md-6" id="email" type="text" name="email" />
            <span asp-validation-for="email"></span>
        </div>
        <div class="form-group row">
            <label class="col-md-6 col-form-label" for="password">Password: </label>
            <input class="form-control col-md-6" id="password" type="text" name="password" />
            <span asp-validation-for="password"></span>
        </div>
        <div class="form-group row">
            <label class="col-md-6 col-form-label" for="password2">Password: </label>

            <input class="form-control col-md-6" id="password2" type="text" name="password2" />
            <span asp-validation-for="password2"></span>
        </div>
        <div class="form-group row">
            <label class="col-md-6 col-form-label"></label>
            <input class="form-control col-md-6 btn btn-primary" type="submit" value="Register"/>
        </div>
    </form>
</div>
