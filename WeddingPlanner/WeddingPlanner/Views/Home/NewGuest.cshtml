@model Guest

@{
    ViewData["Title"] = "Add a Guest";
}



<h4>Add a Guests</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddGuest" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AFirstName" class="control-label">First Name</label>
                <input asp-for="AFirstName" class="form-control" />
                <span asp-validation-for="AFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ALastName" class="control-label">Last Name</label>
                <input asp-for="ALastName" class="form-control" />
                <span asp-validation-for="ALastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BFirstName" class="control-label">First Name</label>
                <input asp-for="BFirstName" class="form-control" />
                <span asp-validation-for="BFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BLastName" class="control-label">Last Name</label>
                <input asp-for="BLastName" class="form-control" />
                <span asp-validation-for="BLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsAttending" class="control-label">Will Attend?</label>
                <select asp-for="IsAttending">
                <option value="">Choose an Option</option>
                <option value="true">Yes</option>
                    <option value="false">No</option> 
                    </select>
                <span asp-validation-for="IsAttending" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add Guest(s)" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Dashboard">Back to Dashboard</a>
</div>

