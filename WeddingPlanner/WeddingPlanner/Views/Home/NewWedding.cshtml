@model Wedding

<h2>Your Wedding Day</h2>
    <div class="p-1 m-1card w-50">
       
        <h6 class="card-title">Enter details of your wedding to get started.</h6>
        <div class="card-body">
            <form asp-action="CreateWedding" method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <fieldset>
                    <legend>Wedding Party </legend>
                    <div class="form-row">
                        <div class=" form-group col-6">
                            <label class="" asp-for="AFirstName">First Name:</label>
                            <input class="form-control" asp-for="AFirstName" />
                            <span asp-validation-for="AFirstName"></span>
                        </div>

                        <div class="form-group col-6">
                            <label class="" asp-for="ALastName">Last Name:</label>
                            <input class="form-control" asp-for="ALastName" />
                            <span asp-validation-for="ALastName"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-6">
                            <label class="" asp-for="BFirstName">First Name:</label>
                            <input class=" form-control" asp-for="BFirstName" />
                            <span asp-validation-for="BFirstName"></span>
                            </div>
                            <div class="form-group col-6">
                                <label class="" asp-for="BLastName">Last Name:</label>
                                <input class="form-control" asp-for="BLastName" />
                                <span asp-validation-for="BLastName"></span>
                            </div>
                        </div>
                </fieldset>

                
                

                <fieldset>
                    <legend>Time and Location</legend>

                    <div class=" form-row">
                        <div class="form-group col-4">
                            <label class= asp-for="Date">Date and Time:</label>
                            <input class="form-control" asp-for="Date" />
                            <span asp-validation-for="Date"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-12">
                            <label asp-for="AddressName" class="control-label ">Location Name:</label>
                            <input asp-for="AddressName" class="form-control " />
                            <span asp-validation-for="AddressName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-12">
                            <label asp-for="Address1" class="control-label">Address:</label>
                            <input asp-for="Address1" class="form-control" />
                            <span asp-validation-for="Address1" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-6">
                            <label asp-for="City" class="control-label ">City:</label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                  
                        <div class="form-group col-2">
                            <label asp-for="State" class="control-label">State:</label>
                            <input asp-for="State" class="form-control" />
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                    
                        <div class="form-group col-4">
                            <label asp-for="Zipcode" class="control-label ">Zipcode:</label>
                            <input asp-for="Zipcode" class="form-control" />
                            <span asp-validation-for="Zipcode" class="text-danger"></span>
                        </div>
                    </div>

                </fieldset>
                <div class="form-group text-center">
                    <input type="submit" value="Submit Form" class="btn btn-primary"/>
                </div>
    
            </form>
        </div>
    </div>

