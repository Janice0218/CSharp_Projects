@model User

<div class="container">

    <div class="card">
        <form style="width: 450px; padding: 25px; margin: 200px auto 20px; border: 2px solid black" action="register" method="post">
            <h3 class="card-header">Sign up!</h3>
            <div class="card-body">
                <div class="form-group row">

                    <label class="col-md-6 col-form-label" for="first_name">First Name: </label>
                    <input class="form-control col-md-6" id="first_name" type="text" name="first_name" />
                    <p class="col-md-4" ></p><span  class="text-danger" asp-validation-for="first_name"></span>
                </div>
                <div class="form-group row">

                    <label class="col-md-6 col-form-label" for="last_name">Last Name: </label>
                    <input class="form-control col-md-6" id="last_name" type="text" name="last_name" />
                    <p class="col-md-4"></p><span class="text-danger" asp-validation-for="last_name"></span>
                </div>
                <div class="form-group row">
                    <label class="col-md-6 col-form-label" for="email">Email: </label>
                    <input class="form-control col-md-6" id="email" type="text" name="email" />
                    <p class="col-md-4"></p><span class="text-danger" asp-validation-for="email"></span>
                </div>
                <div class="form-group row">
                    <label class="col-md-6 col-form-label" for="password">Password: </label>
                    <input class="form-control col-md-6" id="password" type="text" name="password" />
                    <p class="col-md-6"></p><small>Min 8 characters.</small>
                    <p class="col-md-4" ></p><span  class="text-danger" class="text-center text-danger" asp-validation-for="password"></span>
                </div>
                <div class="form-group row">
                    <label class="col-md-6 col-form-label" for="password2">Verify Password: </label>

                    <input class="form-control col-md-6" id="password2" type="text" name="password2" />
                    <p class="col-md-4"></p><span class="text-danger" asp-validation-for="password2"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-6 col-form-label"></label>
                <input class="form-control col-md-6 btn btn-primary" type="submit" value="Register" />
            </div>
        </form>
        <form class="text-center" asp-action="Login" method="get">
            <p>already registered? Click here to login.  <input type="submit" value="login"/></p></form>
    </div>
</div>
