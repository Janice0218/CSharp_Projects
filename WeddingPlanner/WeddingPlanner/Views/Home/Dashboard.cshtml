@model List<Wedding>
<h2>Upcoming Weddings</h2>
<table class="table table-info table-striped table-bordered">
    <thead>
    <tr><th>Wedding Couple</th><th>Date</th><th>Action</th></tr>
    </thead>
    <tbody>
    @if (Model.Count == 0)
    {
        <tr><td colspan="2">No upcoming weddings to display</td><td><button>placeholder</button></td></tr>
    }
    @foreach (var wedding in Model)
    {

        <tr>
            <td><a asp-action="Wedding" asp-route-wedId="@wedding.WeddingId">@wedding.AFirstName @wedding.ALastName and @wedding.BFirstName @wedding.BLastName</a></td> <td>@wedding.Date</td>
        </tr>
    }
    </tbody>
</table>
