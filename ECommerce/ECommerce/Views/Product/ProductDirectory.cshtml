@using Microsoft.AspNetCore.Http
@model IEnumerable<Product>

<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>Product</th>
        <th>Description</th>
        <th>Price</th>
    </tr>
    </thead>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Name</td>
            <td>@p.Description</td>
            <td>@p.Price.ToString("C") <a class="btn" asp-action="AddToCart" asp-route-ProdID="@p.ProductID" asp-controller="Cart">Add to Cart</a></td>
            
        </tr>
    }
</table>
<div class="pages text-center m-2">
    <a asp-action="ProductDirectory" asp-route-pagenum="1">Page 1</a>
    <a asp-action="ProductDirectory" asp-route-pagenum="2">Page 2</a>
    <a asp-action="ProductDirectory" asp-route-pagenum="3">Page 3</a>
</div>
@if (ViewContext.HttpContext.Session.Keys.Contains("Cart"))
{
    <a asp-action="ViewCart" asp-controller="cart">View Shopping Cart</a>
}