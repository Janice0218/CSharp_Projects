@model IEnumerable<Product>

<h3>Your Shopping Cart</h3>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Product</th>
            <th>Description</th>
            <th>Price</th>
        </tr>
    </thead>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Name</td>
            <td>@p.Description</td>
            <td>@p.Price.ToString("C") <a class="btn" asp-action="#" asp-controller="Cart">Remove from Cart</a></td>

        </tr>
    }
</table>
